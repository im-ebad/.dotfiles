@define-color foreground #eeeeee;
@define-color foreground-inactive #aaaaaa;
@define-color background #0B0D0F;

* {
  font-family:
    Mononoki Nerd Font,
    "Font Awesome 6 Free",
    "Font Awesome 5 Free",
    "Nerd Font",
    sans-serif;
  font-size: 17px;
  border-radius: 8px;
  padding: 0;
  margin: 0;
}

#waybar {
  color: @foreground;
  background-color: transparent;
}
#workspaces button {
  color: @foreground;
  padding-left: 0.5rem;
  margin: 0 2px 0 0;
  padding: 0 2px 2px 0;
}

#workspaces button.empty {
  color: @foreground-inactive;
}
#workspaces {
  background-color: @background;
  border-radius: 5px;
  margin: 0 10px;
  padding: 0 8px;
}
#cpu,
#memory,
#battery,
#clock {
  background-color: @background;
  padding: 0 8px;
}
#tray {
  background-color: @background;
  padding: 0 8px;
}
#network {
  background-color: @background;
  padding: 0 12px;
}
#wireplumber {
  background-color: @background;
  padding: 0 8px;
}
#custom-arch {
  color: @foreground;
  background-color: @background;
  padding: 2 8px;
  margin: 2 2px;
  border-radius: 20px;
  min-height: 30px;
}
